{
  "extends": "stylelint-config-standard",
  "ignoreFiles": ["**/*.min.css"],
  "plugins": ["stylelint-order", "stylelint-group-selectors"],
  "syntax": "css",
  "rules": {
    "plugin/stylelint-group-selectors": true,
    "string-quotes": "double",
    "unit-allowed-list": [
      "deg",
      "em",
      "ex",
      "ms",
      "rem",
      "%",
      "s",
      "px",
      "vw",
      "vh"
    ]
  }
}
